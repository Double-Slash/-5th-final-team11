<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.Register2Activity"
    android:background="#000000">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="100dp"
        android:layout_height="29dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="241dp"
        android:layout_marginBottom="628dp"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="80dp"
        android:layout_height="19dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="631dp"
        android:text="추가 정보"
        android:textColor="#969696"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="@string/register2"
        android:textColor="#B5B5B5"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.473" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="주량"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/textView8"
        app:layout_constraintTop_toBottomOf="@id/textView8" />

    <EditText
        android:id="@+id/et_drinking_capacity"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="337dp"
        android:layout_marginBottom="423dp"
        android:backgroundTint="#707070"
        android:hint="소주                                                 병"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textColorHint="#969696"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/textView8"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="none"
        android:focusable="false"
        android:text=""/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="평균 숙취"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/textView8"
        app:layout_constraintTop_toBottomOf="@id/et_drinking_capacity" />

    <SeekBar
        android:id="@+id/sb_drinking_capacity"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="335dp"
        app:layout_constraintStart_toStartOf="@id/textView9"
        app:layout_constraintTop_toBottomOf="@id/textView9"
        android:max="4"
        android:min="0"
        android:thumb="@drawable/seekbar_thumb"
        android:progressTint="#FFA255"
        app:tickMark="@drawable/tickmark" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="없음"
        android:textColor="#B2B2B2"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/sb_drinking_capacity"
        app:layout_constraintTop_toBottomOf="@id/sb_drinking_capacity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="심함"
        android:textColor="#B2B2B2"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/sb_drinking_capacity"
        app:layout_constraintTop_toBottomOf="@id/sb_drinking_capacity" />


    <Button
        android:id="@+id/btn_end_register2"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/button_background_gradient"
        android:text="작성 완료"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/layout_numberPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone">

        <NumberPicker
            android:id="@+id/numberPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#263238"
            android:theme="@style/NumberPickerTextColor"/>

        <Button
            android:id="@+id/btn_set_capacity"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="#4638CE"
            android:text="완료"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>