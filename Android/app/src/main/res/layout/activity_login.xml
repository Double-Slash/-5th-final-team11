<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.LoginActivity"
    android:background="#000000">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="소셜 계정으로 간편하게 시작하기"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_custom_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="89dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toTopOf="@id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginBottom="186dp"
        android:layout_marginTop="20dp"
        android:text="@string/main_title"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/btn_login_kakao"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="499dp"
        android:layout_marginEnd="224dp"
        android:src="@drawable/ic_kakao_login"
        app:layout_constraintBottom_toBottomOf="@+id/btn_custom_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
      />

    <FrameLayout
        android:id="@+id/btn_custom_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="157dp"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="38dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_browse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >



        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/ic_google_login" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="224dp"
        android:layout_marginTop="499dp"
        android:layout_marginEnd="84dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_custom_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       >


        <com.facebook.login.widget.LoginButton
            android:id="@+id/btn_login_facebook"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:visibility="gone"/>


     <ImageView
         android:id="@+id/btn_custom_facebook"
         android:layout_width="52dp"
         android:layout_height="52dp"
         android:background="@drawable/ic_facebook_login"/>





    </FrameLayout>




    <!--    <Button-->
    <!--        android:id="@+id/btn_sign_in_facebook"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        android:text="페이스북"-->
    <!--        />-->



    <Button
        android:id="@+id/btn_browse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_custom_google"
        android:background="@drawable/button_background"
        android:text="둘러보기"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        />


</androidx.constraintlayout.widget.ConstraintLayout>