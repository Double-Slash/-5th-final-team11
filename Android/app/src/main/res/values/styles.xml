<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/appbar_background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="MyDatePicker">
        <item name="android:textColorPrimary">@color/datePickerColor</item>
    </style>

    <style name="AppBar">
        <item name="android:background">@color/appbar_background</item>
    </style>

    <style name="AppBarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ChipTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabBackground">@drawable/bg_tab</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">#a5a5a5</item>
        <item name="tabPaddingEnd">25dp</item>
        <item name="tabPaddingStart">25dp</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextAppearance">@style/ChipTabText</item>
    </style>

    <style name="ChipTabText" type="TextAppearance.Design.Tab">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ic_rating_star</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="NumberPickerTextColor">
        <item name="android:textColorPrimary">#FFFFFF</item>

    </style>

    <style name="FacebookLoginButton">
        <item name="android:background">@drawable/ic_facebook_login</item>
    </style>

    <style name="FirstInputStyle" />

    <style name="FirstInputStyle.Page" parent="FirstInputStyle">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="FirstInputStyle.Title" parent="FirstInputStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="FirstInputStyle.SubTitle" parent="FirstInputStyle">
        <item name="android:textColor">#cccccc</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FirstInputStyle.Label" parent="FirstInputStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>